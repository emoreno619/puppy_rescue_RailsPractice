<% if @puppy.errors.any? %>
  <% @puppy.errors.full_messages.each do |error| %>
   
    <p class="text-danger">
      <%= error%>
    </p>
  <% end %>
<% end %>


<%= form_for @puppy do |f| %>
    <%= f.label "Name" %>
    <%= f.text_field :name %><br />
    <%= f.label "Breed" %>
    <%= f.text_field :breed %><br />
    <%= f.label "Age" %>
    <%= f.text_field :age %><br />
    <%= f.label "Image" %>
    <%= f.text_field :image %><br />
    <%= f.label "Bio" %>
    <%= f.text_field :bio %><br />
    <%= f.submit "GO!" %>
<% end %>